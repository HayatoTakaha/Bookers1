<!DOCTYPE HTML>
<html lang="ja">
<head>
    <meta charset="UTF-8"/>
</head>

  <body>
<div>
  <%= flash[:notice] %>
</div>
 <h1>Books</h1>

<table>
 <thead>
  <tr>
   <th>Title</th>
   <th>Body</th>
  </tr>
 </thead>

 <tbody>
  <tr>
    <% @books.each do |book| %>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "Show", book_path(book.id) %></td>
    <td><%= link_to "Edit", edit_book_path(book) %></td>
    <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
  </tr>
 <% end %>
 </tbody>
</table>

<h2>New book</h2>

<p>title</p>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: Book.new do |f| %>

  <%= f.text_field :title %>
  <p>body</p>
  <%= f.text_area :body %>
  <p><%= f.submit 'Create Book' %></p>
<% end %>
</body>
</html>